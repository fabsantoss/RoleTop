@model RoleTopMVC.ViewModels.DashboardViewModel
<main>
                    <h2>Administrador</h2>
                    <section id="informacoes-dos-eventos">
                            <h3>Status dos eventos</h3>
                            <div id="painel">
                                <div class="box-status-eventos aprovados">
                                    <h4>Aprovados</h4>
                                    <p>@Model.EventosAprovados</p>
                                </div>
                                <div class="box-status-eventos pendentes">
                                    <h4>Pendentes</h4>
                                    <p>@Model.EventosPendentes</p>
                                </div>
                                <div class="box-status-eventos reprovados">
                                    <h4>Reprovados</h4>
                                    <p>@Model.EventosPendentes</p>
                                </div>
                            </div>
                        </section>
                        
                        <table>
                            <thead>
                                <tr>
                                    <th rowspan="2">Nome</th>
                                    <th rowspan="2">Serviços edicionais</th>
                                    <th rowspan="2">Tipo de evento</th>
                                    <th rowspan="2">Data do evento</th>
                                    <th rowspan="2">Horário</th>
                                    <th colspan="2" rowspan="2">Aprovar evento</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td colspan="8">
                                        <p>Eventos atualizados em @DateTime.Now</p>
                                    </td>
                                </tr>
                            </tfoot>
                            <tbody>
                            @foreach(var evento in Model.Eventos)
                            {
                                <tr>
                                    <td>@evento.Cliente.Nome</td>
                                    <td>@evento.TiposDeEvento.Nome</td>
                                    <td>@evento.ServicosAdicionais.Nome</td>
                                    <td>@evento.DataDoEvento</td>
                                    <td>@evento.Horario</td>
                                    <td><a href='@Url.Action("Aprovar", "Usuario", new {id = @evento.Id})'><i class="fas fa-check"></i></a></td>
                                    <td><a href='@Url.Action("Reprovar", "Usuario", new {id = @evento.Id})'><i class="fas fa-times"></i></a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </section>
                    
                </section>
            </main>
